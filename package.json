{
  "name": "ld-55",
  "version": "1.0.0",
  "description": "LD 55 Compo game - by AweSkyBear",
  "scripts": {
    "start": "webpack serve --mode=development",
    "start:editor": "webpack serve --mode=development --env editor",
    "build": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "build:prod:analyze-bundle": "webpack --mode=production --env analyzeBundle=true",
    "build:watch": "webpack --watch --mode=development",
    "clean": "rimraf dist",
    "postinstall": "electron-builder install-app-deps",
    "superclean": "rimraf .cache node_modules build dist",
    "clean:browser": "rimraf build build:browser",
    "download-phaser-typedef": "download --out typings https://raw.githubusercontent.com/photonstorm/phaser3-docs/master/typescript/phaser.d.ts",
    "copy-build-assets": "node ./scripts/copy-build-assets.js",
    "parc:build": "parcel build src/main.ts src/main.ts src/index.html --public-url ./ -d build --out-file=main --target=electron",
    "parc:build:browser": "parcel build src/index.html --public-url ./ -d build-browser  --out-file=main --target=browser",
    "build:browser": "rimraf build && parcel build src/index.html --public-url ./ -d build-browser  --out-file=main --target=browser",
    "parc:build:browser:nosource": "parcel build src/index.html --public-url ./ -d build-browser  --out-file=main --target=browser --no-source-maps",
    "build:browser:nosource": "rimraf build && parcel build src/index.html --public-url ./ -d build-browser  --out-file=main --target=browser --no-source-maps",
    "watch": "rimraf build && parcel watch src/main.ts src/index.html --public-url ./ -d build --out-file=main --target=electron",
    "watch:browser": "parcel watch src/index.html --public-url ./ -d build-browser  --out-file=main --target=browser",
    "app": "cross-env ELECTRON_DEBUG=true electron build/main.js",
    "debug": "cross-env ELECTRON_DEBUG=vscode electron --remote-debugging-port=9223 build/main.js",
    "dist": "cross-env ELECTRON=true yarn build && electron-builder",
    "watch:rebuild": "onchange -d 0 -k -v  \"./src/**\" \"./assets/**\" -- yarn parc:build",
    "watch:rebuild:browser": "onchange -d 0 -k -v  \"./src/**\" \"./assets/**\" -- yarn parc:build:browser",
    "server": "http-server -a localhost build-browser "
  },
  "author": "aweskybear",
  "license": "MIT",
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jsfxr": "^1.1.1",
    "object-path": "^0.11.8",
    "obs-disp": "^0.1.11",
    "parcel-bundler": "^1.12.5",
    "phaser3-rex-plugins": "^1.1.71",
    "ramda": "^0.28.0",
    "random": "^3.0.6",
    "rimraf": "^3.0.2",
    "throttle-debounce": "^5.0.0",
    "to-array-buffer": "^3.2.0",
    "uniqid": "^5.4.0"
  },
  "source": {
    "~/*": "./src/$1"
  },
  "devDependencies": {
    "@types/dat.gui": "^0.7.12",
    "@types/object-path": "^0.11.4",
    "@types/ramda": "^0.28.15",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.9.0",
    "download-cli": "^1.1.1",
    "electron": "^19.0.10",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0",
    "file-loader": "^6.2.0",
    "function-arguments": "^1.0.9",
    "glslify-bundle": "^5.1.1",
    "glslify-deps": "^1.3.2",
    "howler": "^2.2.4",
    "http-server": "^14.1.1",
    "lil-gui": "^0.19.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "parse-function": "^5.6.10",
    "phaser": "^3.80.1",
    "prando": "^6.0.1",
    "prettier": "2.7.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
